{% extends 'base.html.twig' %}

{% block title %}Categorys{% endblock %}
{% block body %}
	<div class="container col-md-12" style="padding: 20px;">
		<div class="card">

		    <div class="card-header">Categorys</div>
		    {% for message in app.flashes('success') %}
	            <div class="alert alert-success" role="alert">
	                {{ message }}
	                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
				    	<span aria-hidden="true">&times;</span>
				  	</button>
	            </div>
	        {% endfor %}
		    <div class="col-md-4" style="padding: 20px;">
		    	<a href="{{ path('category_new') }}"  class="btn btn-success btn-sm">New</a>
		    </div>
		    
		    <div class="card-body">
		    	
		    	<div class="table-responsive">
	                <table class="table mb-0">
	                    <thead>
	                        <tr>
	                            <th>Name</th>
	                            <th>Active</th>
	                            <th></th>
	                        </tr>
	                    </thead>
	                    <tbody>
	                         {% for category in categorys %}
	                            <tr>
	                                <td>
	                                    {{category.name}}
	                                </td>
	                                
	                                <td>
	                                    {% if category.active == 1 %}
	                                    	Actived
	                                    {% else %}	
	                                    	Inactivated
	                                    {% endif %}

	                                </td>

	                               
	                               
	                             	<td>
	                                    <a class='btn btn-warning' href="{{ path('category_edit', {id: category.id}) }}"> Updated </a>
	                                     <a class='btn btn-success' href="{{ path('category_show', {id: category.id}) }}"> Show </a>
	                                    <a class='btn btn-danger' href="{{ path('category_delete', {id: category.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');"> Delete </a>
	                                   
	                                </td> 
	                            </tr>
	                        {% endfor %}
	                    </tbody>
	                </table>
	            </div>
		    </div>
		</div>
	</div>
{% endblock %}